/* IMPORT: Playfair Display (Forbes Style) & Inter (UI) */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&family=Playfair+Display:ital,wght@0,400;0,600;0,900;1,400&display=swap');

:root {
  /* Dark Mode Palette */
  --bg-color: #0d1117;          
  --code-bg: #1f2428;           
  --border-color: #30363d;
  --text-primary: #c9d1d9;
  --text-secondary: #8b949e;
  --accent-color: #58a6ff;      
  
  /* Fonts */
  --header-font: 'Playfair Display', serif; 
  --body-font: 'Inter', sans-serif;
  --mono-font: 'SFMono-Regular', Consolas, 'Liberation Mono', monospace;
}

body {
  background-color: var(--bg-color);
  color: var(--text-primary);
  font-family: var(--body-font);
  font-size: 18px; 
  line-height: 1.7;
  margin: 0;
  padding: 0;
}

/* --- BANNER --- */
.top-banner {
  background: linear-gradient(rgba(13, 17, 23, 0.8), rgba(13, 17, 23, 0.9)), 
              url('https://images.unsplash.com/photo-1451187580459-43490279c0fa?q=80&w=2072&auto=format&fit=crop');
  background-size: cover;
  background-position: center;
  border-bottom: 1px solid var(--border-color);
  padding: 20px 0;
  position: sticky;
  top: 0;
  z-index: 100;
  transition: transform 0.3s ease-in-out, opacity 0.3s ease-in-out;
  box-shadow: 0 4px 20px rgba(0,0,0,0.5);
}

.top-banner.hidden {
  transform: translateY(-100%);
  opacity: 0;
}

.banner-content {
  max-width: 1400px; 
  margin: 0 auto;
  padding: 0 40px;
}

.brand {
  font-family: var(--header-font);
  font-weight: 600;
  font-size: 1.8rem;
  color: #fff;
  text-decoration: none;
  letter-spacing: 1px;
  text-transform: uppercase;
}

/* --- LAYOUT --- */
.layout-container {
  display: grid;
  grid-template-columns: 280px 1fr; 
  gap: 60px;
  max-width: 1400px; 
  margin: 40px auto;
  padding: 0 40px;
}

/* --- SIDEBAR --- */
.sidebar {
  position: sticky;
  top: 120px; 
  height: fit-content;
  border-right: 1px solid var(--border-color);
  padding-right: 20px;
}

.toc-title {
  font-family: var(--header-font);
  font-size: 1.2rem;
  color: var(--text-secondary);
  margin-top: 0;
  margin-bottom: 15px;
  border-bottom: 2px solid var(--accent-color);
  display: inline-block;
}

#toc-list { list-style: none; padding: 0; margin: 0; }
#toc-list li { margin-bottom: 10px; }
#toc-list a {
  color: var(--text-secondary);
  text-decoration: none;
  font-size: 0.95rem;
  display: block;
  transition: color 0.2s;
}
#toc-list a:hover { color: var(--accent-color); padding-left: 5px; }

/* --- MAIN CONTENT --- */
.markdown-body { min-width: 0; }

h1, h2, h3, h4 {
  font-family: var(--header-font);
  color: #ffffff;
  margin-top: 1.5em;
  line-height: 1.2;
}

h1 {
  font-size: 3.5rem; 
  font-weight: 400; 
  border-bottom: 1px solid var(--border-color);
  padding-bottom: 20px;
  margin-top: 0;
}

h2 { font-size: 2.2rem; font-weight: 600; color: #e6edf3; }
h3 { font-size: 1.5rem; font-weight: 600; color: #c9d1d9; }

a { color: var(--accent-color); text-decoration: none; }
a:hover { text-decoration: underline; }

/* --- CODE BLOCKS --- */
pre {
  background-color: var(--code-bg); 
  border: 1px solid var(--border-color);
  border-radius: 8px;
  padding: 20px;
  overflow-x: auto;
  margin: 25px 0;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  position: relative; 
}

code {
  font-family: var(--mono-font);
  background-color: rgba(110, 118, 129, 0.4);
  padding: 0.2em 0.4em;
  border-radius: 6px;
  font-size: 1em; 
}

pre code {
  background-color: transparent;
  padding: 0;
  color: #e1e4e8;
  
  /* CHANGED: Increased from 16px to 18px */
  font-size: 18px; 
  
  line-height: 1.45; /* Slightly increased line height to accommodate bigger font */
  display: block;
}

/* --- COPY BUTTON --- */
.copy-btn {
  position: absolute;
  top: 10px;
  right: 10px;
  background-color: rgba(255, 255, 255, 0.1);
  border: 1px solid var(--border-color);
  border-radius: 6px;
  cursor: pointer;
  padding: 6px 10px;
  color: var(--text-secondary);
  transition: all 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.copy-btn:hover {
  background-color: rgba(255, 255, 255, 0.2);
  color: #fff;
  border-color: #8b949e;
}

.copy-btn svg {
  fill: currentColor;
  width: 16px;
  height: 16px;
}

blockquote {
  border-left: 4px solid var(--accent-color);
  padding-left: 20px;
  color: var(--text-secondary);
  font-style: italic;
  font-size: 1.1em;
}

img {
  max-width: 100%;
  border-radius: 8px;
  box-shadow: 0 5px 15px rgba(0,0,0,0.3);
}

@media (max-width: 900px) {
  .layout-container { grid-template-columns: 1fr; }
  .sidebar { display: none; }
  h1 { font-size: 2.5rem; }
}