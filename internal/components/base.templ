package components

templ baseTemplate(c CommonData) {
    <!DOCTYPE html>
    <html lang="en">

        <head>
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>{c.Title}</title>
            <link rel="stylesheet" href="/static/style.css">
        </head>

        <body>
            @headerTemplate(c)

            {children...}

            @footerTemplate(c)
        </body>   
        
    </html>
}
