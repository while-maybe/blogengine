package components

templ baseTemplate(title string) {
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{title}</title>
        <link rel="stylesheet" href="/static/style.css">
    </head>
        @headerTemplate(title)

        <body>
            {children...}
        </body>   

        @footerTemplate(title)
    </html>
}
